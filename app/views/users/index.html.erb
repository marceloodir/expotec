
<div class="padrao" id="usuarios">
  <p id="notice"><%= notice %></p>

  <h1><%= User.model_name.human(count: @users.count) %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= User.human_attribute_name "nome" %></th>
        <th><%= User.human_attribute_name "e-mail" %></th>
        <th>Cpf</th>
        <th><%= User.human_attribute_name "kind" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.cpf %></td>
          <td><%= user.kind.description %></td>
          <td><%= link_to t('button.show'), user, class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to t('button.edit'), edit_user_path(user), class: 'btn btn-warning btn-xs' %></td>
          <td><%= link_to t('button.destroy'), user, class: 'btn btn-danger btn-xs', 
                                               method: :delete, data: { confirm: t('message.confirm_delete') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div id="paginador">
    <%= paginate @users %>
  </div>

  <div class="botoes">
    <br>
    <%= link_to t('button.new_user'), new_user_path, class: 'btn btn-success btn-block' %>
    <%= link_to t('button.back'), home_index_path, class: 'btn btn-default btn-block' %>
  </div>
</div>